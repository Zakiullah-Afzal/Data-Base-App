<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".MainActivity_UserOption">

    <TextView
        android:id="@+id/textViewUserOption"
        android:layout_width="167dp"
        android:layout_height="89dp"
        android:text="@string/option"
        android:textColor="#CCFFFFFF"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/textViewUserCloseOption"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:text="@string/close"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewUserOption"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />
    <EditText
        android:id="@+id/editTextTextUserOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:autofillHints=""
        android:ems="10"
        android:textColor="#CCFFFFFF"
        android:hint="@string/name"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserOption"
        app:layout_constraintVertical_bias="0.003" />

    <EditText
        android:id="@+id/editTextNumberUserOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:textColor="#CCFFFFFF"
        android:hint="@string/id"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUserOption1"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/editTextTextUserOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:textColor="#CCFFFFFF"
        android:hint="@string/time"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberUserOption1"
        app:layout_constraintVertical_bias="0.058" />

    <EditText
        android:id="@+id/editTextNumberUserOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:textColor="#CCFFFFFF"
        android:hint="@string/credit"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUserOption2"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textViewModeUserOption"
        android:layout_width="142dp"
        android:layout_height="74dp"
        android:text="@string/insert"
        android:gravity="center"
        android:textColor="#CC4CAF50"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberUserOption2"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/buttonUserOptionActive"
        android:layout_width="104dp"
        android:layout_height="62dp"
        android:text="@string/active"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModeUserOption"
        app:layout_constraintVertical_bias="0.348" />
</androidx.constraintlayout.widget.ConstraintLayout>